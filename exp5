#include <stdio.h>

int main() {
    char str[100];
    int words = 0, lines = 0, characters = 0;

    printf("Enter text (up to 100 characters, use ~ to end):\n");
    scanf("%[^~]", str); // Reads input until '~' is encountered

    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == ' ' || str[i] == '\t') {
            words++;
        } else if (str[i] == '\n') {
            lines++;
            words++; // Count word at end of line
        } else {
            characters++;
        }
    }

    // Adjust counts for the last word and line if input wasn't empty
    if (characters > 0) {
        words++;
        lines++;
    }

    printf("Total number of words: %d\n", words);
    printf("Total number of lines: %d\n", lines);
    printf("Total number of characters: %d\n", characters);

    return 0;
}
